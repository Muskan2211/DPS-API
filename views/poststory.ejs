<%- include("header"); -%>

<div class=" container mt-5">
  <h1 class="headoflogreg">POST YOUR LITTLE STORY</h1>

  <div class="row">
    <div class="logregform col-sm-8">
      <div class="  card">
        <div class="logreg card-body">
          <form  action="/story" method="POST">
            <div  form-group">
              <label for="Title">Title</label>
              <input type="text" class="form-control" name="title">
            </div>
            <div class="form-group">
              <label for="Author">Author</label>
              <input type="text" class="form-control" name="author">
            </div>
            <div class="form-group">
              <label for="Story">Story</label>
              <textarea class="form-control" name="story">Enter your little story here...</textarea>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
<%- include("footer"); -%>
