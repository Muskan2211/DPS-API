<%- include("header"); -%>

<div class=" container mt-5">
  <h1 class="headoflogreg">POST YOUR POEM</h1>

  <div class="row">
    <div class="logregform col-sm-8">
      <div class="  card">
        <div class="logreg card-body">
          <form  action="/poems" method="POST">
            <div  form-group">
              <label for="Title">Title</label>
              <input type="text" class="form-control" name="title">
            </div>
            <div class="form-group">
              <label for="Poet">Poet</label>
              <input type="text" class="form-control" name="poet">
            </div>
            <div class="form-group">
              <label for="Poem">Poem</label>
              <textarea class="form-control" name="poem">Enter your poem here...</textarea>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
<%- include("footer"); -%>
