<%- include("header"); -%>

<div class=" container mt-5">

  <h1 class="headoflogreg">POST YOUR FAVOURITE DIALOGUE</h1>

  <div class="row">
    <div class="logregform col-sm-8">
      <div class="  card">
        <div class="logreg card-body">
          <form  action="/dialogue" method="POST">
            <div  form-group">
              <label for="Title">Movie / Series Title</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
              <label for="script">Dialogue</label>
              <textarea class="form-control" name="script">Enter your favourite line...</textarea>
            </div>
            <div class="form-group">
              <label for="Actor Name">Character Name</label>
              <input type="text" class="form-control" name="actor">
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
<%- include("footer"); -%>
